# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Tasks
GET     /tasks                      controllers.Application.tasks
GET     /tasks/:id                  controllers.Application.getTask(id: Long)
POST    /tasks                      controllers.Application.newTask
DELETE  /tasks/:id                  controllers.Application.deleteTask(id: Long) 

#UserTasks
GET     /:login/tasks               controllers.Application.tasksUser(login: String)
POST    /:login/tasks               controllers.Application.newTaskUser(label: String, login: String)

#TaskDates
#GET    /:login/:enddate/tasks      controllers.Application.taskUserDate(login: String, enddate: Option[java.util.Date])
GET    /:login/:enddate/tasks       controllers.Application.tasksUserDate(login: String, enddate: String)
POST   /:login/:enddate/tasks       controllers.Application.newtaskUserDate(label: String, login: String, enddate: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
